<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/pwlist_item_background"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rectangle"
        />

    <TextView
        android:id="@+id/password_domain_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/pwlist_item_background"
        android:layout_alignBottom="@id/pwlist_item_background"
        android:layout_alignTop="@id/pwlist_item_background"
        android:text="text"
        android:gravity="center"
        android:layout_marginStart="20dp"

        />


    <TextView
        android:id="@+id/password_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/pwlist_item_background"
        android:layout_alignEnd="@id/pw_share_btn"
        android:layout_alignBottom="@id/pwlist_item_background"
        android:layout_marginEnd="35dp"
        android:gravity="center"
        android:text="password" />

    <ImageView
        android:id="@+id/pw_share_btn"
        android:scaleType="centerInside"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="0dp"
        android:layout_alignTop="@id/pwlist_item_background"
        android:layout_alignBottom="@id/pwlist_item_background"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_password_share"
        android:adjustViewBounds="true"/>

</RelativeLayout>