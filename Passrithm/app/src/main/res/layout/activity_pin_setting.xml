<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginTop="70dp"
    tools:context=".controller.pwlist.PinSettingActivity">
    <TextView
        android:id="@+id/etInputInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PIN번호 설정"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_marginBottom="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/passcode"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="10">

        <EditText
            android:id="@+id/passcode1"
            android:inputType="textPassword"
            android:layout_height="30dp"
            android:gravity="center"
            android:maxLength="1"
            android:textSize="40sp"
            android:singleLine="true"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/circle"
            android:layout_margin="10dp">
            <requestFocus />
        </EditText>
        <EditText
            android:id="@+id/passcode2"
            android:inputType="textPassword"
            android:layout_height="30dp"
            android:gravity="center"
            android:maxLength="1"
            android:textSize="40sp"
            android:singleLine="true"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/circle"
            android:layout_margin="10dp">
        </EditText>
        <EditText
            android:id="@+id/passcode3"
            android:inputType="textPassword"
            android:layout_height="30dp"
            android:gravity="center"
            android:maxLength="1"
            android:textSize="40sp"
            android:singleLine="true"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/circle"
            android:layout_margin="10dp">

        </EditText>
        <EditText
            android:id="@+id/passcode4"
            android:inputType="textPassword"
            android:layout_height="30dp"
            android:gravity="center"
            android:maxLength="1"
            android:textSize="40sp"
            android:singleLine="true"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/circle"
            android:layout_margin="10dp">
        </EditText>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:layout_marginBottom="16dp"
        android:orientation="vertical">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:shrinkColumns="*"
            android:stretchColumns="*">
            <TableRow>
                <Button
                    android:backgroundTint="#FDAFC9FF"
                    android:id="@+id/btn1"
                    android:text="1"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:layout_width="120dp"
                    android:layout_height="55dp"/>
                <Button
                    android:backgroundTint="#FDAFC9FF"
                    android:id="@+id/btn2"
                    android:text="2"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:layout_width="120dp"
                    android:layout_height="55dp"/>
                <Button
                    android:backgroundTint="#FDAFC9FF"
                    android:id="@+id/btn3"
                    android:text="3"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:layout_width="120dp"
                    android:layout_height="55dp"/>
            </TableRow>
            <TableRow>
                <Button
                    android:backgroundTint="#FDAFC9FF"
                    android:id="@+id/btn4"
                    android:text="4"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:layout_width="120dp"
                    android:layout_height="55dp"/>
                <Button
                    android:backgroundTint="#FDAFC9FF"
                    android:id="@+id/btn5"
                    android:text="5"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:layout_width="120dp"
                    android:layout_height="55dp"/>
                <Button
                    android:backgroundTint="#FDAFC9FF"
                    android:id="@+id/btn6"
                    android:text="6"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:layout_width="120dp"
                    android:layout_height="55dp"/>
            </TableRow>
            <TableRow>
                <Button
                    android:backgroundTint="#FDAFC9FF"
                    android:id="@+id/btn7"
                    android:text="7"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:layout_width="120dp"
                    android:layout_height="55dp"/>
                <Button
                    android:backgroundTint="#FDAFC9FF"
                    android:id="@+id/btn8"
                    android:text="8"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:layout_width="120dp"
                    android:layout_height="55dp"/>
                <Button
                    android:backgroundTint="#FDAFC9FF"
                    android:id="@+id/btn9"
                    android:text="9"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:layout_width="120dp"
                    android:layout_height="55dp"/>
            </TableRow>
            <TableRow>
                <Button
                    android:backgroundTint="#FDAFC9FF"
                    android:id="@+id/btnErase"
                    android:text="DEL"/>
                <Button
                    android:backgroundTint="#FDAFC9FF"
                    android:id="@+id/btn0"
                    android:text="0"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:layout_width="120dp"
                    android:layout_height="55dp"/>
                <Button
                    android:backgroundTint="#FDAFC9FF"
                    android:id="@+id/btn_ok"
                    android:text="OK"
                    />
            </TableRow>
        </TableLayout>
    </LinearLayout>
</LinearLayout>